<Window x:Class="WPFStarter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFStarter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        
        
        <TabControl>
            <TabItem Header="Output">
                <Grid Background="#FFE5E5E5">
                <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Извлечение данных из файла .csv в БД" VerticalAlignment="Top" Background="#FFA6A6A6"/>
                <TextBlock HorizontalAlignment="Left" Margin="10,35,0,0" TextWrapping="Wrap" Text="Путь" VerticalAlignment="Top"/>
                <TextBox x:Name="PathImport" HorizontalAlignment="Left" Margin="80,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="600"/>
                <Button Content="Извлечь" HorizontalAlignment="Left" Margin="700,35,0,0" VerticalAlignment="Top" Click="Button_Click"/>
                </Grid>
                </TabItem>
            <TabItem Header="Input">
                <Grid Background="#FFE5E5E5">
                    <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Экспорт данных из БД в файл .csv или .XML" VerticalAlignment="Top" Background="#FFA6A6A6"/>
                    <TextBlock HorizontalAlignment="Left" Margin="10,35,0,0" TextWrapping="Wrap" Text="Имя файла" VerticalAlignment="Top"/>
                    <TextBox x:Name="FileExport" HorizontalAlignment="Left" Margin="80,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="600"/>
                    <Button Content="Экспорт" HorizontalAlignment="Left" Margin="700,35,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>
                    <TextBlock HorizontalAlignment="Left" Margin="10,60,0,0" TextWrapping="Wrap" Text="Тип файла" VerticalAlignment="Top"/>
                    <StackPanel x:Name="stackPanel" Orientation="Horizontal">
                        <RadioButton x:Name="radioButton1" Content=".csv" HorizontalAlignment="Left" Margin="80,60,0,0" VerticalAlignment="Top" GroupName="Type" IsChecked="True"/>
                        <RadioButton x:Name="radioButton2" Content=".xml" HorizontalAlignment="Left" Margin="18,60,0,0" VerticalAlignment="Top" GroupName="Type"/>
                    </StackPanel>
                    <TextBlock HorizontalAlignment="Left" Margin="10,85,0,0" TextWrapping="Wrap" Text="Выбор данных для экспорта" VerticalAlignment="Top" Background="#FFA6A6A6"/>
                    <TextBlock HorizontalAlignment="Left" Margin="10,110,0,0" TextWrapping="Wrap" Text="По дате" VerticalAlignment="Top"/>
                    <TextBlock HorizontalAlignment="Left" Margin="10,135,0,0" TextWrapping="Wrap" Text="за" VerticalAlignment="Top"/>
                    <TextBox x:Name="Date" HorizontalAlignment="Left" Margin="80,135,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <TextBlock HorizontalAlignment="Left" Margin="10,160,0,0" TextWrapping="Wrap" Text="с" VerticalAlignment="Top"/>
                    <TextBox x:Name="FromDate" HorizontalAlignment="Left" Margin="80,160,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <TextBlock HorizontalAlignment="Left" Margin="215,160,0,0" TextWrapping="Wrap" Text="по" VerticalAlignment="Top"/>
                    <TextBox x:Name="ToDate" HorizontalAlignment="Left" Margin="280,160,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <TextBlock HorizontalAlignment="Left" Margin="10,185,0,0" TextWrapping="Wrap" Text="По городу" VerticalAlignment="Top"/>
                    <TextBox x:Name="City" HorizontalAlignment="Left" Margin="10,210,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <TextBlock HorizontalAlignment="Left" Margin="10,235,0,0" TextWrapping="Wrap" Text="По стране" VerticalAlignment="Top"/>
                    <TextBox x:Name="Country" HorizontalAlignment="Left" Margin="10,260,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <TextBlock HorizontalAlignment="Left" Margin="155,185,0,0" TextWrapping="Wrap" Text="По ФИО" VerticalAlignment="Top"/>
                    <TextBlock HorizontalAlignment="Left" Margin="155,210,0,0" TextWrapping="Wrap" Text="Фамилия" VerticalAlignment="Top"/>
                    <TextBlock HorizontalAlignment="Left" Margin="155,235,0,0" TextWrapping="Wrap" Text="Имя" VerticalAlignment="Top"/>
                    <TextBlock HorizontalAlignment="Left" Margin="155,260,0,0" TextWrapping="Wrap" Text="Отчество" VerticalAlignment="Top"/>
                    <TextBox x:Name="LastName" HorizontalAlignment="Left" Margin="220,210,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="FirstName" HorizontalAlignment="Left" Margin="220,235,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="SurName" HorizontalAlignment="Left" Margin="220,260,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
